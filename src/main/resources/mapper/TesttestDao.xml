<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bcsoft.interfacedemo.dao.TesttestDao">

    <resultMap type="cn.bcsoft.interfacedemo.entity.Testtest" id="TesttestMap">
        <result property="testId" column="test_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="text" column="text" jdbcType="VARCHAR"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TesttestMap">
        select
          test_id, name, text, date
        from javatest.testtest
        where test_id = #{testId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TesttestMap">
        select
          test_id, name, text, date
        from javatest.testtest
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TesttestMap">
        select
        test_id, name, text, date
        from javatest.testtest
        <where>
            <if test="testId != null">
                and test_id = #{testId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="text != null and text != ''">
                and text = #{text}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="testId" useGeneratedKeys="true">
        insert into javatest.testtest(name, text, date)
        values (#{name}, #{text}, #{date})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update javatest.testtest
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="text != null and text != ''">
                text = #{text},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
        </set>
        where test_id = #{testId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from javatest.testtest where test_id = #{testId}
    </delete>

</mapper>